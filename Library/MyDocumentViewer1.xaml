<Window x:Class="Library.MyDocumentViewer1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="預約借書" Height="450" Width="800">
    <Grid>
        <StackPanel Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <Label x:Name="BookInfoLabel" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Label Content="名子:" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,0,10"/>
            <Label Content="電話號碼:" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="PhoneTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="提交" Width="100" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

